<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insurance Dashboard</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <!-- Header Section -->
    <header>
        <div class="logo">
            <img src="{{imageSrc}}" alt="Kaito Logo">
        </div>
        <div class="company-info">
            <h1>Kaito Assurance Brokers Private Limited</h1>
            <p>Chennai, Tamil Nadu</p>
        </div>
    </header>

    <!-- Request Quote Button -->
    <div class="quote-section">
        <button class="quote-btn">Request for quote - GMC</button>
    </div>

    <!-- Client Information -->
    <!-- Client Information -->
<section class="info-section">
    <h2>Client Information</h2>
    <div class="info-box">
        <div>
            <p>Client Name</p>
            <h3>{{contact_information.0.full_name}}</h3>
            <p>Client ID: {{contact_information.0.id}}</p>
        </div>
        <div>
            <p>City / State / Country</p>
            <h3>{{corporate_information.address.city}},
                {{corporate_information.address.states}},
                {{corporate_information.address.country}}</h3>
        </div>
    </div>
</section>

    <!-- Product Information -->
    <section class="product-info">
    <h2 class="section-title">Product Information</h2>
    <div class="info-container">
      <div class="info-item">
        <p>Insurance Product</p>
        <h3>{{product_information.product.name}}</h3>
      </div>
      <div class="info-item">
        <p>Sub Product</p>
        <h3>{{product_information.sub_product.name}}</h3>
      </div>
      <div class="info-item">
        <p>Type of Policy</p>
        <h3>{{product_information.type_of_policy}}</h3>
      </div>
      <div class="info-item">
        <p>Expiring Policy Period</p>
        <h3>{{product_information.expiring_policy_start_date}} to {{product_information.expiring_policy_end_date}}</h3>
        <p class="duration">({{product_information.policy_duration}})</p>
      </div>
      <div class="info-item">
        <p>Name of Existing Insurer</p>
        <h3>{{product_information.existing_insurers.0.name}}</h3>
      </div>
      <div class="info-item">
        <p>Employee Employer Relationship</p>
        <h3>{{product_information.employer_employee_relationship}}</h3>
      </div>
    </div>
  </section>
    

    <!-- Lives Section -->
    <section class="info-section">
        <h2>Lives</h2>
        <div class="table-box">
            <table>
                <tr>
                    <th>Level</th>
                    <th>Employee</th>
                    <th></th>
                    <th>Dependents</th>
                    <th></th>
                    <th>Total Lives</th>
                </tr>
                <tr>
                    <td><b>At Inception</b></td>
                    <td>{{lives_information.employees_at_inception}}</td>
                    <td>+</td>
                    <td>{{lives_information.dependents_at_inception}}</td>
                    <td>=</td>
                    <td>{{lives_information.total_lives_at_inception}}</td>
                </tr>
                <tr>
                    <td><b>At Expiry</b></td>
                    <td>{{lives_information.employees_at_expiry}}</td>
                    <td>+</td>
                    <td>{{lives_information.dependents_at_expiry}}</td>
                    <td>=</td>
                    <td>{{lives_information.total_lives_at_expiry}}</td>
                </tr>
                <tr>
                    <td><b>At Renewal</b></td>
                    <td>{{lives_information.employees_at_renewal}}</td>
                    <td>+</td>
                    <td>{{lives_information.dependents_at_renewal}}</td>
                    <td>=</td>
                    <td>{{lives_information.total_lives_at_renewal}}</td>
                </tr>
            </table>
        </div>
    </section>

    <!-- Expiring Premium -->
    <section class="info-section">
        <h2>Expiring Premium</h2>
        <div class="info-box">
            <p><b>Premium Paid at Inception</b>: {{expiring_premium.premium_paid_at_inception}}</p>
            <p>+</p>
            <p><b>Premium Paid for Addition</b>: {{expiring_premium.premium_paid_for_addition}}</p>
            <p>-</p>
            <p><b>Premium Refund on Detection</b>: {{expiring_premium.premium_refund_on_deletion}}</p>
            <p>=</p>
            <p><b>Total Premium Paid</b>: {{expiring_premium.total_premium_paid}} </p>
        </div>
        <div class="table-box">
            <table>
                <tr>
                    <th>Installment Type</th>
                    <th>Payable Before</th>
                    <th>Installment (%)</th>
                    <th>Net Premium</th>
                    <th>Premium (Rs.) Excl. Taxes</th>
                    <th>Including Taxes</th>
                </tr>
                <tr>
                    <td>{{expiring_premium.installments.0.installment_type}}</td>
                    <td>{{expiring_premium.installments.0.payable_on_or_before}}</td>
                    <td>{{expiring_premium.installments.0.installment_percentage}}</td>
                    <td>{{expiring_premium.installments.0.net_premium}}</td>
                    <td>{{expiring_premium.installments}}</td>
                    <td>{{expiring_premium.installments.0.premium_including_taxes}}</td>
                </tr>
                <tr>
                    <td>{{expiring_premium.installments.1.installment_type}}</td>
                    <td>{{expiring_premium.installments.1.payable_on_or_before}}</td>
                    <td>{{expiring_premium.installments.1.installment_percentage}}</td>
                    <td>{{expiring_premium.installments.1.net_premium}}</td>
                    <td>{{expiring_premium.installments}}</td>
                    <td>{{expiring_premium.installments.1.premium_including_taxes}}</td>
                </tr>
                <tr>
                    <td><b>Total</b></td>
                    <td></td>
                    <td></td>
                    <td><b>20,000</b></td>
                    <td><b>20,000</b></td>
                    <td><b>20,000</b></td>
                </tr>
            </table>
        </div>
    </section>
    <div class="claim-information">
    <h3>Claim Information</h3>
    <table>
        <thead>
            <tr>
                <th>Year</th>
                <th>Name of TPA</th>
                <th>Paid / Settlement Amount</th>
                <th>Outstanding Amount</th>
                <th>Total Incurred Amount</th>
                <th>Claims on</th>
                <th>Annualized Outgo</th>
                <th>Life Adjusted Outgo</th>
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{claims_information.0.year}}</td>
                <td>{{claims_information.0.tpa.name}}</td>
                <td>{{claims_information.0.paid_amount}}</td>
                <td>{{claims_information.0.outstanding_amount}}</td>
                <td>{{claims_information.0.total_incurred}}</td>
                <td>{{claims_information.0.claim_as_on_date}}</td>
                <td>{{claims_information.0.annualized_outgo}}</td>
                <td>{{claims_information.0.life_adjusted_outgo}}</td>
                <td>{{claims_information.0.remarks}}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="coverages-section">
    <h2 class="section-title">Coverages</h2>
    
    <div class="table-container">
        <table class="coverages-table">
            <thead>
                <tr>
                    <th>Covers</th>
                    <th>Option - 1</th>
                    <th>Option - 2</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Family Definition</td>
                    <td id="option1-family">{{coverages.0.coverages.0.options.0.title}}</td>
                    <td id="option2-family"></td>
                </tr>
                <script>
                    function compareFamilyDefinition() {
                        let option1Family = document.getElementById("option1-family").innerText;
                        let option2Family = "{{coverages.0.coverages.0.options.1.title}}"; 
                
                        if (option1Family === option2Family) {
                            document.getElementById("option2-family").innerHTML = "same";
                        } else {
                            document.getElementById("option2-family").innerText = option2Family;
                        }
                    }
                
                    // Function Call
                    compareFamilyDefinition();
                </script>
                </tr>
                <tr>
                    <td>Family Size</td>
                    <td>{{coverages.0.coverages.0.options.0.value}}</td>
                    <td>{{coverages.0.coverages.0.options.1.value}}</td>
                </tr>
                <tr>
                    <td>Type of Cover</td>
                    <td>Floater</td>
                    <td>✅</td>
                </tr>
                <tr>
                    <td>Sum Insured Per Family</td>
                    <td>{{coverages.0.coverages.2.options.0.value}}</td>
                    <td>{{coverages.0.coverages.2.options.1.value}}</td>
                </tr>
                <tr>
                    <td>Domiciliary Hospitalisation</td>
                    <td>{{coverages.0.coverages.4.options.0.value}}</td>
                    <td>{{coverages.0.coverages.4.options.1.value}}</td>
                </tr>
                <tr>
                    <td>Pre-existing disease exclusion</td>
                    <td>{{coverages.0.coverages.6.options.0.value}}</td>
                    <td>{{coverages.0.coverages.6.options.1.value}}</td>
                </tr>
                <tr>
                    <td>First 30 days waiting period</td>
                    <td>{{coverages.0.coverages.5.options.0.value}}</td>
                    <td>{{coverages.0.coverages.5.options.1.value}}</td>
                </tr>
                <tr>
                    <td>1 / 2 / 4 year exclusion</td>
                    <td>{{coverages.0.coverages.7.options.0.value}}</td>
                    <td>{{coverages.0.coverages.7.options.1.value}}</td>
                </tr>
                <tr>
                    <td>Maternity Benefit</td>
                    <td>{{coverages.0.coverages.9.options.0.value}}</td>
                    <td>{{coverages.0.coverages.9.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Maternity 9 months waiting period</td>
                    <td>{{coverages.0.coverages.10.options.0.value}}</td>
                    <td>{{coverages.0.coverages.10.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Pre-Post Natal Expenses</td>
                    <td>{{coverages.0.coverages.11.options.0.value}}</td>
                    <td>{{coverages.0.coverages.11.options.1.value}} </td>
                </tr>
                <tr>
                    <td>New Born Baby Coverage</td>
                    <td>{{coverages.0.coverages.14.options.0.value}}</td>
                    <td>{{coverages.0.coverages.14.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Corporate Buffer - Annual Amount</td>
                    <td>NA</td>
                    <td>✅</td>
                </tr>
                <tr>
                    <td>Corporate Buffer - Restrictions</td>
                    <td>NA</td>
                    <td>✅</td>
                </tr>
                <tr>
                    <td>Pre & Post Hospitalisation Expenses (30-60 Days)</td>
                    <td>{{coverages.0.coverages.16.options.0.value}}</td>
                    <td>{{coverages.0.coverages.16.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Daily Room Rent Restriction</td>
                    <td>{{coverages.0.coverages.8.options.0.value}}</td>
                    <td>{{coverages.0.coverages.8.options.1.value}}</td>
                </tr>
                <tr>
                    <td>Ambulance Charges</td>
                    <td>{{coverages.0.coverages.17.options.0.value}}</td>
                    <td>{{coverages.0.coverages.17.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Sub Limit of ailments</td>
                    <td>
                        cataract: Rs. 20,000 | Surgery for Piles : 15,000 <br>
                        Surgery for Renal Stone : Rs. 35,000 | FTCA : Rs. 1,40,000 <br>
                        Hysterectomy : Rs. 25,000 | Prostate Surgery TURP : 30,000 <br>
                        CABG : 1,75,000 | Removal Of Gall bladder : 25,000 <br>
                        Appendectomy : 30,000 | Hip Replacement : 2,00,000
                    </td>
                    <td>✅</td>
                </tr>
                <tr>
                    <td>Co-Payment</td>
                    <td>{{coverages.0.coverages.19.options.0.value}}</td>
                    <td>{{coverages.0.coverages.19.options.1.value}} </td>
                </tr>
                <tr>
                    <td>AYUSH Treatment</td>
                    <td>{{coverages.0.coverages.13.options.0.value}}</td>
                    <td>{{coverages.0.coverages.13.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Dental Treatment</td>
                    <td>{{coverages.0.coverages.21.options.0.value}}</td>
                    <td>{{coverages.0.coverages.21.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Cashless Facility</td>
                    <td>{{coverages.0.coverages.25.options.0.value}}</td>
                    <td>{{coverages.0.coverages.25.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Mid-term Addition of Dependents</td>
                    <td>{{coverages.0.coverages.27.options.0.value}}</td>
                    <td>{{coverages.0.coverages.27.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Claim Intimation</td>
                    <td>{{coverages.0.coverages.30.options.0.value}}</td>
                    <td>{{coverages.0.coverages.30.options.1.value}} </td>
                </tr>
                <tr>
                    <td>Claim Submission</td>
                    <td>{{coverages.0.coverages.29.options.0.value}}</td>
                    <td>{{coverages.0.coverages.29.options.1.value}} </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="documents-container">
  <div class="documents-header">
    <span>Documents</span>
    <i class="edit-icon"></i>
  </div>
  <table class="documents-table">
    <thead>
      <tr>
        <th>Insured Name</th>
        <th>Document Name</th>
        <th>Document Number</th>
        <th>File Name</th>
        <th>Size</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{documents}}</td>
        <td>{{documents}}</td>
        <td class="document-number">{{documents}}</td>
        <td class="file-name">{{documents}}</td>
        <td>{{documents}}</td>
      </tr>
    </tbody>
  </table>
</div>

</body>
</html>
